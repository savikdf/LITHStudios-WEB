<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>LITH Studios</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#222222">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <script src="/Scripts/jquery-1.10.2.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <!--LOADER-->
    <div id="loader"></div>
    <div id="unloaded" style="display:none">
        <!--MENU-->
        <button id="menu-button">MENU</button>
        <div id="menu">
            <div id="menu-container">
                <button class="menu-button-sub" href="#section-about" onclick="CloseMenu('section-about')">About</button>
                <button class="menu-button-sub" href="#section-contact" onclick="CloseMenu('section-contact')">Contact</button>

                <button id="close-menu" class="menu-button-sub">Close</button>
            </div>
        </div>
        <script>
            var html; // it would make more sense to apply this to body, but IE7 won't have that
            var menu = $("#menu");
            var menuIsOpen = false;

            //clicking anywhere off the menu closes it
            $("#menu").click(function () {
                CloseMenu();
            })

            //opens the menu
            $("button#menu-button").click(function () {
                //var scrollPosition = [
                //    self.pageXOffset || document.documentElement.scrollLeft || document.body.scrollLeft,
                //    self.pageYOffset || document.documentElement.scrollTop || document.body.scrollTop
                //];
                //var html = jQuery('html');
                //html.data('scroll-position', scrollPosition);
                //html.data('previous-overflow', html.css('overflow'));
                //html.css('overflow', 'hidden');
                //window.scrollTo(scrollPosition[0], scrollPosition[1]);

                menu.css("display", "normal");
                menu.fadeIn("fast");
                isMenuOpen = true;

            }
            );

            //closes the menu
            $("button#close-menu").click(function () {
                CloseMenu();
            }
            );

            function CloseMenu(divToGo) {
                // un-lock scroll position
                //var html = jQuery('html');
                //var scrollPosition = html.data('scroll-position');
                //html.css('overflow', html.data('previous-overflow'));
                //window.scrollTo(scrollPosition[0], scrollPosition[1]);

                menu.fadeOut("slow");
                isMenuOpen = false;
                if (divToGo != null) {
                    $('html, body').animate({
                        scrollTop: $("#" + String(divToGo)).offset().top
                    }, 300);
                }
            }

            //on load ping for menu awareness
            $(document).ready(function () {
                loadFunction();
            })

        </script>
        <!--END MENU-->


        @RenderBody()

        <div class="container">
            <hr />
            <footer>
                <p>&copy; 2015-@DateTime.Now.Year  LITH Studios</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("Scripts", required: false)
    </div>

    <script>
            var myVar;
            function loadFunction() {
                myVar = setTimeout(showPage, 1600);
            }

            function showPage() {
                $("div#loader").fadeOut("slow", function () {
                    $("div#unloaded").fadeIn("slow");
                    $("div#unloaded").css("display", "initial").css("opacity", "0%");
                });

            }
    </script>

</body>
</html>
