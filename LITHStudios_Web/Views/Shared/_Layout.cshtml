    <!--HEADER-->
    <div id="parallax-header">
        <img id="LITH-text" src="~/Content/Images/LITH-Mask.png" />
        <div id="scroll-holder" style="position:absolute; left:10px; bottom: 10px;">
            <div id="scroll-down">
                <span class="arrow-down">
                    <!-- css generated icon -->
                </span>
                <span id="scroll-title">
                    Scroll down
                </span>
            </div>
        </div>
     
    </div>




    <script>
        var LITHTextHeight = (($(window).height() / 2) - ($("#LITH-text").innerHeight() / 2));

        $("#LITH-text").centerWidth();
        $("#LITH-text").css("top", LITHTextHeight);

        if (!isMobile) {
            $(window).on("scroll resize", function () {
                //Header
                $("#LITH-text").css("opacity", 1 - $(window).scrollTop() / 450);
                $("#LITH-text").css("top", LITHTextHeight + ($(window).scrollTop() / 2));

                //arrow:
                $("#scroll-holder").css("opacity", 1 - $(window).scrollTop()/100);   

            });
        } else {
            $("#scroll-holder").css("display", "none");

        }
    </script>

